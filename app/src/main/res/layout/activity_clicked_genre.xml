<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClickedGenre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.1"

            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name"
            android:fontFamily="@font/fredoka_one"
            android:textSize="14pt"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/search_button"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genreClassics"
        android:textSize="16pt"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="20dp"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/fredoka_one"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/imageMockingBird"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mockingBird" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerMockingBird"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleMockingBird"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrMockingBird"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/imageGatsby"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gatsby" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerGetsby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleGatsby"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/descriptionGatsby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrGatsby"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/imageMobyDick"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mobydick" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerMobyDick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleMobyDick"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/descriptionMobyDick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrMobyDick"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/imageToTheLight"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/toTheLightHouse" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerToTheLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleToTheLight"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/descriptionToTheLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrToTheLight"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/imageFrankenstein"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/frankenstein" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerFrankenstein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleFrankenstein"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/descriptionFrankenstein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrFrankensein"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/imageDracula"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dracula" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerDracula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleDracula"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/descriptionDracula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrDracula"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/imageLOTR"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lotr" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerLOTR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleLOTR"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/descriptionLOTR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrLOTR"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/imageMonteCristo"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/monteCristo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerMonteCristo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="@string/classicsTitleMonteCristo"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/descriptionMonteCristo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/expletus_sans"
                        android:text="@string/classicsDescrMonteCristo"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>